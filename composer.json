{
    "name": "phpformsframework/libs",
    "description": "php FormsFramework libs",
    "type": "library",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Alessandro Stucchi", 
            "email": "wolfgan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json" : "*",
        "ext-openssl": "*",
        "ext-mysqli": "*",

        "ext-zlib": "*",
        "ext-gd": "*",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "ext-ftp": "*",
        "sinergi/browser-detector" : "^7.0",
        "phpmailer/phpmailer": "^6.0"
    },
    "suggest": {
        "ext-mongodb": "to use MongoDb",
        "twilio/sdk" : "to use SMS notifications [composer require twilio/sdk:^5.31.3]"
    },
    "autoload": {
        "files": [
            "cache/autoload.php",
            "delivery/autoload.php",
            "installer/autoload.php",
            "international/autoload.php",
            "security/autoload.php",
            "storage/autoload.php",
            "tpl/autoload.php",
            "autoload.php"
        ]
    }
}
