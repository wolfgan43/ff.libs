<?xml version="1.0" encoding="utf-8"?>
<configdata>
    <env>
        <DATABASE_MAX_RECURSION value="100" />
    </env>
    <pages>
        <page path="/media"     engine="media" validate_url="false" />
        <page path="/assets"    engine="media" validate_url="false" />
    </pages>
    <engine>
        <media source="(.*)" obj="phpformsframework\libs\storage\Media" method="get" params="$1" accept_path_info="true" />
    </engine>
    <dirs>
        <dir type="app" path="/app/conf/packages" />
        <dir type="app" path="/uploads"  writable="true" />

        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/common/*" scan="common" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/css/*" scan="css" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/fonts/*" scan="fonts" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/images/*" scan="images" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/js/*" scan="js" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/layouts/*" scan="layouts" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/xml/*" scan="xml" />

        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/widgets/*/*" scan="widgets" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/widgets/*/images/*" scan="widgets/images" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/widgets/*/fonts/*/*" scan="widgets/fonts" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/widgets/*/audio/*" scan="widgets/audio" />
        <dir type="assets" path="[LIBS_PATH]/phpformsframework/libs/assets/widgets/*/video/*" scan="widgets/video" />

    </dirs>
</configdata>